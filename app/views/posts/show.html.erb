<div class="container">
  <h1>Twitter</h1>
  <div id="table">
    <h4><%= current_user.full_name %></h4>
    <p><%= current_user.username %><p>
    <table class="table">
        <tr>
          <th><h6>Tweets</h6></th>
          <th><h6>Followers</h6></th>
          <th><h6>Following</h6></th>
        </tr>
        <tr>
          <td><h5><%= current_user.posts.count%></h5></td>
        </tr>
    </table>
  </div>

  <form class="newtweet" id="newtweet" action="/posts" method="post">
    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
    <textarea class="form-control" rows="1" name="post[content]" placeholder="What's happening?"></textarea>
    <input class="btn btn-info" type="submit" value="Tweet">
  </form>

  <h2>New Tweets</h2>
  <div class="panel panel-default" id="panel_panel-default">
      <% @tweets.each do |tweet| %>
        <div class="panel-heading"><h4><%= tweet.user.full_name%> </h4> <small><%= tweet.user.username %> â€¢ <%= time_ago_in_words(tweet.created_at) %> ago</small> </div>
        <div class="panel-body">
          <p><%= tweet.content %></p>
        </div>
      <% end %>
  </div>
</div>
